/* Base styles: opinionated defaults */

html
  color #222
  font-size 1em
  line-height 1.4

::selection
  background-color #5CD7FF
  text-shadow none

::-moz-selection
  background-color #5CD7FF
  text-shadow none

/* Remove the gap between audio, canvas, iframes, images, videos and the bottom of their containers */

audio
canvas
iframe
img
svg
video
  vertical-align middle

/* Remove default fieldset styles */

fieldset
  border 0
  margin 0
  padding 0

/* Allow only vertical resizing of textareas */

textarea
  resize vertical

/* Browser Upgrade Prompt */

.browserupgrade
  margin 0.2em 0
  background $gray80
  color $black
  padding 0.2em 0

.hidden
  display none !important

section
  position relative
  overflow hidden

.layout-section

  &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0,0.3)

.parallax-text
  position absolute
  bottom 8vh
  left 60%
  color $white
  font-family $fontDE
  font-size 5em
  text-transform uppercase
  opacity 0.2

  &:hover
  &:active
    opacity 0.5
    cursor default

.section-parallax
  background-repeat no-repeat
  background-size cover !important
  background-position bottom
  background-attachment fixed !important

  .section-main
    margin-bottom 30vh
    box-shadow 0 0 30px 0 rgba(0,0,0,0.3),0 0 30px 0 rgba(0,0,0,0.25) !important
