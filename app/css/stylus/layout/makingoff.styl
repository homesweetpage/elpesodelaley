#makingoff
  background-image url('../images/parallax/parallax - grandinetti.jpg')
  
  .section-main
    background-color $black
    width 100%
    padding 50px 0 100px
    display inline-block
    
    .inconstructor
      text-align center
      
      img
        padding 15% 0
        display inline-block

    .crew
    
      .table

        tbody

          tr

            td
              border-top none
              font-size 1.3em
              vertical-align bottom
              line-height 1
              padding 2px 8px

              &:first-child
                text-align right
                color $blue
                font-family $fontTG
                font-weight 700

              &:last-child
                text-align left
                color $white
                font-family $fontDE
                text-transform uppercase
                font-size 1.6em