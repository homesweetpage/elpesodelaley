#makingoff
  background-image url('../images/parallax/parallax - grandinetti.jpg')
  background-repeat no-repeat
  background-size cover !important
  background-position top
  background-attachment fixed !important

  .section-main
    background-color $black
    width 100%
    height 70%
    padding 50px 0 100px
    display inline-block

    img
      position relative
      margin-top 15%
      left 50%

    .crew
    
      .table

        tbody

          tr

            td
              border-top none
              font-size 1.3em
              vertical-align bottom
              line-height 1
              padding 2px 8px

              &:first-child
                text-align right
                color $blue
                font-family $fontTG
                font-weight 700

              &:last-child
                text-align left
                color $white
                font-family $fontDE
                text-transform uppercase
                font-size 1.6em