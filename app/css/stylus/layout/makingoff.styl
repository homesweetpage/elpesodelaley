#makingoff
  background-image url('../images/parallax/parallax - grandinetti.jpg')

  .section-main
    background-color $black
    width 100%
    padding 50px 0

    .make-text
      text-align justify

      h3
        font-family $fontDE
        font-size 3em
        color $white
        text-align center
        text-transform uppercase
        margin-bottom 20px

      p
        color $white
        font-size 1.5em
        font-weight 700
        font-family $fontTG
        display inline-block

      span
        color $blue
        float: right
        font-size: 1.3em
        font-family $fontTG
        font-weight 700

.crew

  .table

    tbody

      tr

        td
          border-top none
          font-size 1.3em
          vertical-align bottom
          line-height 1
          padding 2px 8px

          &:first-child
            text-align right
            color $blue
            font-family $fontTG
            font-weight 700

          &:last-child
            text-align left
            color $white
            font-family $fontDE
            text-transform uppercase
            font-size 1.6em
