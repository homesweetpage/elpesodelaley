nav

  &.navbar-default
    background-color transparent
    border none

    &:after
      content ""
      position absolute
      z-index 1000
      background-linear-gradient3d(to bottom, rgba(0, 0, 0, 0.6), 0%, rgba(0, 0, 0, 0.2), 80%, rgba(0, 0, 0, 0), 100%)
      width 100%
      height 55px
      top 0
      left 0

  #logo
    position absolute
    left 50%
    padding 5px 0 0 0
    margin-left -150px
    width 300px
    z-index 1100

  .navbar-collapse
    text-align center

    ul
      display inline-block
      float none
      width 100%

      li
        z-index 1100
        position relative
        overflow hidden

        a
          font-family $fontDE
          font-weight 400
          font-style normal
          text-transform uppercase
          font-size 2em
          color $white !important

        &:before
          display none
          content ''
          position absolute
          width 100%
          height 100%
          top 0
          right 0
          background-image url('../images/highlight.png')
          background-repeat no-repeat
          background-size contain
          background-position center
          opacity 0
          transition all 0.8s ease
          z-index 3000
          cursor pointer

        &.active

          a
            background-color transparent !important

          &:before
            display block
            opacity  0.7
            cursor default

        &.disable

          a
            text-transform lowercase
            cursor default
