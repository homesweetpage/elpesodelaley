#sinopsis
  background-image url('../images/parallax/parallax - lambertini.jpg')
  background-repeat no-repeat
  background-size cover !important
  background-position bottom
  background-attachment fixed !important
  //z-index 8

  .section-main
    background-color $black
    width 100%
    margin-bottom 30vh
    padding 50px 0

    .sinopsis
      text-align center
      margin-bottom 50px

      h3
        font-family $fontDE
        font-size 3em
        color $white
        text-transform uppercase
        margin-bottom 20px

      span
        color $white
        font-size 1.5em
        font-weight 700
        font-family $fontTG

      a
        font-family $fontTG
        font-weight 7000
        font-size 1.3em

    .cast

      .box-pj

        .box-foto
          padding 0 20px
          text-align center

          a
            display inline-block

            img
              transition filter 0.3s
              filter brightness(100%)

            &:hover

              img
                filter brightness(135%)

        .box-leyenda
          text-align center
          // margin-bottom 25px

          span
            font-family $fontDE
            text-transform uppercase
            color $white
            font-size 24px

    .crew
      min-height 338px

      .table

        tbody

          tr

            td
              border-top none
              font-size 1.3em
              vertical-align bottom
              line-height 1
              padding 2px 8px

              &:first-child
                text-align right
                color $blue
                font-family $fontTG
                font-weight 700

              &:last-child
                text-align left
                color $white
                font-family $fontDE
                text-transform uppercase
                font-size 1.6em
