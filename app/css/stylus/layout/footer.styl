footer
    width 100%
    opacity 1
    position relative
    left 0px
    height 76px
    box-sizing border-box
    background-color transparent
    border none
    z-index 0

    &:after
        content ""
        position absolute
        background-linear-gradient3d(to top, rgba(0, 0, 0, 0.6), 0%, rgba(0, 0, 0, 0.2), 80%, rgba(0, 0, 0, 0), 100%)
        width 100%
        height 100%
        z-index -1
        top 0
        left 0

    .container
        vertical-align bottom

        ul
            position relative
            width 100%
            height 100%
            padding 0 11.5%
            text-align center
            z-index 1100
            
            li
                display inline-table
                padding 0
                width 11%
                text-align center
            
                img
                    width 70%

    .pull-left
        padding-left 15px
        margin-top 30px
        z-index 3000
        
        a
            font-size 2em
            padding 5px
            text-decoration none
            transition color 1s
            
            i
                color $white
            
            &:hover
            &:focus
            &:active
                
                i
                    color white
            
    .pull-right
        padding-right 15px
        margin-top 30px
        
        a
            width 38px
            height 38px
            display block
            
            img
                filter grayscale(100%) brightness(150%)
                transition filter 1s
                    
                &:hover
                &:focus
                &:active
                    filter grayscale(100%) brightness(200%)
                        
                &.onBottom
                    filter grayscale(0%) brightness(100%)
                        
                    &:hover
                    &:focus
                    &:active
                        filter grayscale(0%) brightness(150%)