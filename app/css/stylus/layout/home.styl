#home
  background-image url('../images/home.jpg')
  background-color $black
  background-repeat no-repeat
  background-size cover
  background-position center
  height 130vh

  .title
    position fixed
    top 50%
    left 50%
    width 768px
    margin-left -384px
    z-index 500
    text-align center

    .box-homeLogo
      display inline-block

    span
      font-family $fontDE
      font-size 2.5em
      color $white
      letter-spacing 4px
      text-transform uppercase
