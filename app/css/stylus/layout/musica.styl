#musica
  height 100vh
  background-image url('../images/parallax/parallax - onetto.jpg')
  background-repeat no-repeat
  background-size cover !important
  background-position top
  background-attachment fixed !important

  .section-main
    background-color $black
    background-repeat no-repeat
    background-size cover !important
    background-position top
    width 100%
    height 70%
    margin-bottom 300px
    display inline-block

    .musica
      text-align justify
      
      h3
        font-family $fontDE
        font-size 3em
        color $white
        text-align center
        text-transform uppercase
        margin-bottom 20px

      div
        display inline-block

        p
          color $white
          font-size 1.5em
          font-weight 700
          font-family $fontTG

        a
          color $blue !important
          font-family $fontTG
          font-weight 7000
          font-size 1.3em
          text-decoration none
          transition all 0.3s

          &:hover
          &:focus
          &:active
            color $light-blue !important

          &:before
            content '('

          &:after
            content ')'
