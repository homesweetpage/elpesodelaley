.elpesodelmodal
  display none
  position fixed
  z-index 2000
  padding-top 60px
  padding-bottom 60px
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgb($black)
  background-color rgba($black,0.9)

  .mclose
    position absolute
    top 10px
    right 25px
    color #f1f1f1
    font-size 40px
    font-weight 700
    transition 0.3s
    z-index 3000

    &:hover
    &:focus
    &:active
      color #bbb
      text-decoration none
      cursor pointer

  .mbody
    display inline-block
    position relative
    width 100%
    height auto
    text-align center

    .mcontainer
      position relative
      display inline-block
      width 100%
      padding-left 10%
      padding-right 10%
      animation-name zoomIn
      animation-duration 0.6s
      background-color tranparent

      img
        width 100%
        
      h3
        margin-top 40px
        display block
        color $blue
        font-family $fontTG
        font-size 700
        text-align left
        
      iframe
      object
      embed
        padding 10px
      
    .video-container
      position relative
      padding-bottom 56.25%
      height 0
      max-width 100%
      overflow hidden
      
      iframe
      object
      embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%