.elpesodelmodal
  display none
  position fixed
  z-index 2000
  padding-top 100px
  padding-bottom 100px
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgb($black)
  background-color rgba($black,0.9)

  .mclose
    position absolute
    top 15px
    right 35px
    color #f1f1f1
    font-size 40px
    font-weight 700
    transition 0.3s

    &:hover
    &:focus
      color #bbb
      text-decoration none
      cursor pointer

  .mbody
    width 100%
    height auto

    .mcontainer
      margin auto
      display block
      width 80%
      max-width 700px
      animation-name zoomIn
      animation-duration 0.6s
      background-color $white

      img
        width 100%

    iframe
      position absolute
      top 10%
      left 10%
      right 10%
      bottom 10%
      width 80%
      height 80%
