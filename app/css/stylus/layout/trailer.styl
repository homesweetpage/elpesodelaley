#trailer
  height 100vh
  padding-top 20vh
  background-image url('../images/postales/lldll_a01_007671.jpg')
  background-repeat no-repeat
  background-size cover
  position relative

  &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0,0,0,0.55)

  .col-afiche
    text-align center
    padding 0
    z-index 500

    .box-afiche
      width 100%
      height 100%
      overflow hidden

      img
        height 100%
        width 100%
        transition all .3s
        cursor pointer

        &:hover
        &:focus
          transform scale(1.1)

  .col-trailer
    text-align center
    padding 0
    z-index 500

    .box-trailer
      display inline-block
      width 100%
      height 100%
      overflow hidden
      margin-bottom -5px

      video
        width 100%
        height 100%
        transition all .3s
        cursor pointer

        &:hover
        &:focus
          transform scale(1.1)
