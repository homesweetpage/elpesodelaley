#trailer
  height 100vh
  padding-top 20vh
  background-image url('../images/postales/colectivo.jpg')
  background-repeat no-repeat
  background-size cover
  position relative

  .col-afiche
    text-align center
    padding 0
    z-index 500
    perspective 150px

    .box-afiche
      width 100%
      height 100%
      overflow hidden
      transform rotateY(3deg)

      img
        width 100%
        transition all .3s
        cursor pointer

        &:hover
        &:focus
          transform scale(1.1)

  .col-trailer
    text-align center
    padding 0
    z-index 500
    perspective 150px

    .box-trailer
      display inline-block
      width 100%
      height 100%
      overflow hidden
      margin-bottom -5px
      transform rotateY(-1.5deg)

      video
        width 100%
        height 100%
        transition all .3s
        cursor pointer

        &:hover
        &:focus
          transform scale(1.1)
