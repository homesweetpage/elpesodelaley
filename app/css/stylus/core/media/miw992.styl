@media (min-width 992px)

  nav

    &.navbar-default
      background-color transparent

      &:after
        content ""
        position absolute
        z-index 1000
        background-linear-gradient3d(to bottom, rgba(0, 0, 0, 0.6), 0%, rgba(0, 0, 0, 0.2), 80%, rgba(0, 0, 0, 0), 100%)
        width 100%
        height 55px
        top 0
        left 0

    #logo
      left 50%
      padding 10px 0 0 0
      margin-left -110px
      width 220px

    .navbar-collapse
      text-align center

      ul
        float none
        width 100%

        li
          overflow hidden
          float left

          for i in (0..5)
            &:nth-child(n+{i}):nth-last-child(-n+{i})
              float right !important

          &:hover
          &:focus
          &:active

            a
              color white !important

          &:before
            display none
            content ''
            position absolute
            width 100%
            height 100%
            top 0
            right 0
            background-image url('../images/highlight.png')
            background-repeat no-repeat
            background-size contain
            background-position center
            opacity 0
            transition all 0.8s ease
            z-index 3000
            cursor pointer

          &.active

            a
              background-color transparent !important

            &:before
              display block
              opacity  0.7
              cursor default

          &.disable

            a
              text-transform lowercase
              cursor default