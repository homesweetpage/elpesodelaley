@media (max-width 767px)

  #home

    .title
      position fixed !important
      top 50% !important
      margin-left 0px !important
      left 0 !important
      width 100% !important
      z-index 500 !important
      text-align center !important

      .box-homeLogo
        display inline-block

      span
        font-size 1.8em !important
        letter-spacing 2px  !important

  #sinopsis

    .section-main

      .sinopsis

        h3
          font-size 2.4em !important

        span
          font-size 1.1em !important

        a
          font-size 1em !important

      .crew
        min-height auto !important

        .table

          tbody

            tr

              td
                font-size 1.1em !important

                &:last-child
                  font-size 1.3em !important

  #trailer

    .section-main

      .estreno
        text-align center
        margin-bottom 50px

        h3
          font-family $fontDE
          font-size 6em
          color $white
          letter-spacing 5px
          text-transform uppercase
          margin-bottom 20px

      .col-afiche
        perspective none !important
        text-align center

        .box-afiche
          display inline-block
          max-width 450px
          padding 0 15px
          transform none !important

      .col-trailer
        perspective none !important
        text-align center

        .box-trailer
          padding 0 15px
          display inline-block
          transform none !important

  .elpesodelmodal

    .mbody

      .mcontainer
        padding-left 2% !important
        padding-right 2% !important

  #musica

    .section-main

      .musica

        h3
          font-size 2.4em !important

        p
          font-size 1.1em !important

        a
          font-size 1em !important


  footer

    &.fresponsive

      .container

        ul
          padding calc(50vh - 50%) 0 0 !important

          li
            width 20% !important

  #galery

    .section-btn

      .container

        div

          button
            padding 25px 40px !important
            margin 15px 15px !important

  .parallax-responsive
    display block !important

  .section-parallax
    background-image none !important

    .section-main
      margin-bottom 0 !important
